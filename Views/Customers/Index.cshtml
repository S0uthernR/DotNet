@model IEnumerable<Movies.Models.Customer>

@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<h2>Customers</h2>
@Html.ActionLink("New Customer", "New", "Customers", null, new { @class = "btn btn-info" })
<hr />


<table id="customers" class="table table-bordered table-hover">
    <thead>
        <tr>
            <th>Customer</th>
            <th>Current Membership Type</th>
            <th>Current Discount Rate</th>
            <th>Subscribed to Newsletter?</th>
            <th>Delete</th>
        </tr>
    </thead>
    <tbody>
    </tbody>
</table>




@section scripts
        {

    <script>
    $(document).ready(function () {
            var table = $("#customers").DataTable({
                ajax: {
                    url: "/api/customers",
                    dataSrc: ""
                },
                columns: [
                    {
                        data: "name",
                        render: function (data, type, customer) {
                            return "<a href='/customers/edit/" + customer.id + "'>" + customer.name + "</a>";
                        }
                    },
                    {
                        data: "membershipType.name"
                    },
                    {
                        data: "membershipType.discount",
                        render: function (data, type, row) {
                            return data + " %";
                        }
                    },
                    {
                        data: "issubscribed"



                    },
                    {
                        data: "id",
                        render: function (data) {
                            return "<button class='btn-link js-delete' data-customer-id=" + data + ">Delete</button>";
                        }
                    }
                ]
            });

            $("#customers").on("click", ".js-delete", function () {
                var button = $(this);
                bootbox.confirm("Are you sure you want to delete this customer?", function (result) {
                    if (result) {
                        $.ajax({
                            url: "/api/customers/" + button.attr("data-customer-id"),
                            method: "DELETE",
                            success: function () {
                                table.row(button.parents("tr")).remove().draw();
                            }
                        });
                    }
                });
            });
        });</script>
}